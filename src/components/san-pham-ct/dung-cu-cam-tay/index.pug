					span Số lượng
					.input-amount
						a.btn-dec(href='#')
						input.amount(type='text' value='1' name='')
						a.btn-inc(href='#')
				.wrap-button-buy.mt-19
					a(href="").btn.add-to-cart Thêm vào giỏ hàng
					a(href="").btn.buy-now Mua ngay
		.wrap-desc-product
			.row
				.col-lg-9
					.wrap-box-left
						.tab-desc-product
							.title-tab-product Mô tả sản phẩm
							.content-product
								ul
									li Bắt và tháo ốc vít
									li Có thể sử dụng như một máy khoan cỡ nhỏ
									li Ứng dụng trong sửa chữa gia dụng, sửa chữa cơ khí chuyên nghiệp
								p
									strong Lưu ý
						.box-comment-facebook
							.head
								.title-page Bình luận sản phẩm
								.count-comment 0 Bình luận
				.col-lg-3
					.wrap-other-product
						.title-other-product.color-text.f-18.fw-700.text-uppercase Cùng danh mục
						.wrap-item
							-for(i=0;i<5;i++)
								.item-product-other.zoom-img
									.img
										a(href="")
											img(src="./img/product-big.png" alt="")
									.wrap-content
										a(href="").title Máy khoan chạy Pin Crown CT21052L
										.wrap-price
											ins 4.500.000 đ
											del 5.620.000 đ
					.button.d-flex.justify-center.mt-20
						.btn.btn-defaul.showItem
							span Xem thêm
							em.lnr.lnr-plus-circle
