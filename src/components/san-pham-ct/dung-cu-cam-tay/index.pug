					.wrap-price
						ins.main-price 3.400.000 đ
						del.sale-price 4.050.000 đ
					.wrap-share
						a(href="").add-favorites
							em.lnr.lnr-heart
						a(href="").like-facebook
							em.fab.fa-facebook-f
